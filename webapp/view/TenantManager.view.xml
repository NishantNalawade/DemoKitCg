<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form"
	controllerName="com.sap.cg.demokit.DemoKitCg.controller.TenantManager" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Title" showHeader="false">
				<content>
					<List headerText="Tenants" items="{ path: '/'}" >
						<headerToolbar>
							<Toolbar >
								<content>
									<Title level="H3" text="Tenants" />
									<ToolbarSpacer />
									<Button icon="sap-icon://add" press="addTenant" />
								</content>
							</Toolbar>
						</headerToolbar>
						<items>
							<StandardListItem title="{name}" description="{tenantID}" info="{path:'status', formatter:'.formatter.infoText'}" type="Navigation"
							infoState="{path:'status', formatter:'.formatter.infoStatus'}"/>
						</items>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>